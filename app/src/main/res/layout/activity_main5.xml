<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar Reserva"
            android:fontFamily="sans-serif-black"
            android:textSize="24sp"
            android:textColor="#FF99FF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID del Boleto"
            android:fontFamily="sans-serif-black"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginTop="70dp" />

        <Button
            android:id="@+id/buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:fontFamily="sans-serif-black"
            android:backgroundTint="#CC33FF"
            android:textColor="@color/white"
            android:layout_marginStart="100dp"
            android:layout_below="@id/id"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/origen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buscar"
            android:background="#FF99FF"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/destino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF99FF"
            android:layout_below="@id/origen"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/img"
            android:layout_marginStart="100dp"
            android:layout_marginTop="280dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <EditText
            android:id="@+id/fechatxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha"
            android:focusable="false"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_below="@id/destino"
            android:layout_marginTop="110dp" />

        <Button
            android:id="@+id/fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Fecha"
            android:backgroundTint="#CC33FF"
            android:fontFamily="sans-serif-black"
            android:layout_marginStart="100dp"
            android:textColor="@color/white"
            android:layout_marginTop="490dp" />

        <EditText
            android:id="@+id/hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora"
            android:focusable="false"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginTop="430dp" />

        <Button
            android:id="@+id/btn_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Hora"
            android:backgroundTint="#CC33FF"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:layout_marginStart="100dp"
            android:layout_below="@id/hora"
            android:layout_marginTop="70dp" />

        <Button
            android:id="@+id/actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizar"
            android:backgroundTint="#CC33FF"
            android:fontFamily="sans-serif-black"
            android:layout_marginStart="100dp"
            android:textColor="@color/white"
            android:layout_below="@id/btn_hora"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/regresar"
            android:layout_marginStart="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MenÃº"
            android:fontFamily="sans-serif-black"
            android:backgroundTint="#CC33FF"
            android:textColor="@color/white"
            android:layout_below="@id/actualizar"
            android:layout_marginTop="8dp" />
    </RelativeLayout>
</ScrollView>

